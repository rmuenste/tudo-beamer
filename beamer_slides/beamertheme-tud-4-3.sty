\usetikzlibrary{calc,shapes.callouts,shapes.arrows}

\newcommand{\arrowthis}[4]{
        \tikz[remember picture,baseline]{\node[anchor=base,inner sep=0,outer sep=0]%
        (#1) {#1};
        \node[overlay,single arrow,draw=none,fill=#4,anchor=tip,rotate=#3] 
        at (#1.south) {#2};}%
    }%

\newcommand{\speechthis}[5]{
        \tikz[remember picture,baseline]{\node[anchor=base,inner sep=0,outer sep=0]%
        (#1) {#1};\node[overlay,ellipse callout,fill=#4,rotate=#3,callout relative pointer={(#5)}] 
        at ($(#1.north)+(-.5cm,0.8cm)$) {#2};}%
    }%

\newcommand{\bubblethis}[5]{
        \tikz[remember picture,baseline]{\node[anchor=base,inner sep=0,outer sep=0]%
        (#1) {#1};\node[overlay,cloud callout,rotate=#3,callout relative pointer={(#5)},%
        aspect=2.5,fill=#4] at ($(#1.north)+(-0.5cm,1.6cm)$) {#2};}%
    }%

\newcommand{\pointthis}[5]{
        \tikz[remember picture,baseline]{\node[anchor=base,inner sep=0,outer sep=0]%
        (#1) {#1};\node[overlay,rotate=#3,rectangle callout,%
        callout relative pointer={(#5)},fill=#4] at ($(#1.north)+(-.5cm,-1.4cm)$) {#2};}%
        }%